<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.mycompany.mypizza.NoticeMapper">

	<insert id="insert">
		insert into notice(n_subject,n_content)
		values(#{n_subject},#{n_content})
	
	</insert>
	
	
	<update id="update"> 
		update notice
		set
		  n_subject = #{n_subject},
		  n_content =#{n_content},
		  n_regidate = now(),
		  n_modidate = now()
		where n_num =#{n_num}
	</update>
	
	<delete id="delete">
		delete from notice
		where n_num=#{n_num}
	</delete>
	
	
	<select id="selectOne" resultType="Notice">
		select *from notice
		where n_num=#{n_num}
		
	</select>
	
	<select id="selectList" resultType="Notice">
		select *from notice
		where n_num LIKE concat('%' , #{n_num} , '%')
	</select>
	

	
	
</mapper>  